<div class="row">
  <div class="col-lg-3 col-md-4 justify-content-md-center ">
      <br>
      <div class="text-center">
            <p><%= image_tag @startup.logo_thumbnail,style: 'height:100%;width:100%;'%></p>
            <hr>
            <h5><%= @startup.name %></h5>
            <hr>
            <p><%=@startup.favorites.count %> <span> </span> <img src="/etoile.png" alt="contributeur (s)" width="25" height="25"></p>
            <hr>
            <div id="favorite">
              <%= render 'favorites/index' %>
            </div>
            <hr>
            <%= link_to "Owener profile", user_path(@startup.user.id), class:"btn btn-sm btn-info" %>
        </div>
  </div>
  <div class="col-lg-9 col-md-8 col-sm justify-content-md-center">
    <p><image controls width="100%" height="auto" src="<%= @startup.banner_thumbnail %>"></image></p>
    <div class="text-center">
      <% if user_signed_in? && current_user.id == @startup.user_id %>
      <div class="action">
        <%= link_to 'edit Statut', edit_startup_path(@startup.id),class:"btn btn-sm btn-info" %>
        <%= link_to 'Delete Startup', startup_path(@startup.id), method: :delete, data: { confirm: 'Are you sure?'},class:"btn btn-sm btn-danger" %>
      </div>
      <% end %>
    </div>
    <br>
  </div>
</div>
  <div class="container">
    <div class="container-fluid text-center" id="resume">
      <hr>
      <p><%= @startup.resume %></p>
      <hr>
      <video controls width="100%" height="360px" src="<%= @startup.description_thumbnail %>"</video>
    </div>
  </div>
  <br>
  <br>

<div class="text-center">
  <h4 >Give your opinion on this startup</h4>
  <small>You can participate in the development of this startup's idea by <br>
    giving advice, remarks, and why not some good ideas to grow.</small>
    <hr>
  <%= render partial: 'comments/form', locals: { comment: @comment, startup: @startup } %>
</div>
<hr>
<div class="row">
  <div class="offset-1 col-sm-8">
    <div id="comments_area">
        <%= render partial: 'comments/index', locals: { comments: @comments, startup: @startup } %>
    </div>
  </div>
</div>
<br>
